<style>
	h1 {
        margin-bottom: 1.5rem;
		font-size: 5rem;
		font-weight: bold;
		letter-spacing: 0.2rem;
	}

	h2 {
		margin-bottom: 1.5rem;
		font-size: 3rem;
		font-weight: bold;
		letter-spacing: 0.2rem;
	}

	p {
		margin-bottom: 1.5rem;
		font-size: 2rem;

		line-height: 3.4rem;
		letter-spacing: 0.2rem;
	}
	p > code {
		font-family: roboto-mono;
		font-size: 2.2rem;

		margin: 0 .8rem;
		padding: .1rem 1rem;

		color: var(--color-codeblock);
		background-color: var(--bgcolor-codeblock);
		border-radius: 0.5rem;

	}

    p > alert {
        font-size: 2rem;
        color: var(--alert-color);
    }

	.custom-code {
		font-family: roboto-mono;

		margin-bottom: 1.5rem;
        padding: 2rem;

		border: 1px solid var(--color-font);
        border-radius: 0.5rem;
    }
</style>
