---
import "the-new-css-reset";
import Icon from '../components/Icon.astro';
import { getRelativeLocaleUrl } from 'astro:i18n';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<div class="header__logo">
				LOGO
			</div>

			<div class="header__links">
				<Icon icon="github-logo" size="3rem" href="https://github.com/masterak-902"/>
				<!-- <Icon icon="discord-logo" size="3rem" /> -->
			</div>

			<!-- スクリプト -->
			<div class="header__a11y">
				<!-- TODO:表示モード変更 -->
				 <button>表示モード変更</button>
				<!-- TODO:ロケールスイッチ -->
				<button>ロケールスイッチ</button>
			</div>
		</header>
		<slot />
		<footer>

		</footer>
	</body>
</html>


<style is:global>
	:root {
		--color-font: #fcb400;
		--color-basic: #282540;

		--color-dark: #1a1a1a;
		--color-light: #f5f5f5;
	}
	html {
		background: #282540;
		font-family: sans-serif;

		padding: 2rem;

		/* 1rem = 8px */
		font-size: 8px;
		overflow-y: scroll;
	}

	html::-webkit-scrollbar {
		background-color: var(--color-basic);
		width: 4px;
	}

	html::-webkit-scrollbar-thumb {
		background-color: var(--color-font);
		border-radius: 4px;
	}

	/* レイアウトに関するスタイル */
	body {
		display: grid;
		grid-template-columns: 1fr 920px 1fr;
		grid-template-rows: 180px 1fr 200px;

		gap: 2rem;

		color: var(--color-font);
		font-size: 2rem;
	}

	header {
		grid-column: 1 / 2;
		padding: 0 2rem;
		
		border: var(--color-font);
		border: 1px solid;
		border-radius: 0.5rem;
	}
	
	.header__logo {
		margin-bottom: 1rem;
		padding: 0 2rem;
		
		font-size: 8rem;
		font-weight: 900;
		letter-spacing: 0.8rem;
	}

	.header__links {
		display: flex;
		flex-wrap: wrap;
		
		margin-bottom: 1rem;
		padding: 0 2rem;
		gap: 2rem;
	}
	
	.header__a11y {
		display: flex;
		flex-wrap: wrap;
		
		margin-bottom: 2rem;
		padding: 0 2rem;
		gap: 2rem;
	}

	main {
		grid-row: 1 / 3;
		grid-column: 2 / 4;
		width: 920px;

		padding: 2rem 4rem;

		border: var(--color-font);
		border: 1px solid;
		border-radius: 0.5rem;
	}

	footer {
		grid-row: 3 / 4;
		grid-column: 1 / 4;

		padding: 2rem;

		border: var(--color-font);
		border: 1px solid;
		border-radius: 0.5rem;
	}

	
</style>
